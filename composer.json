{
    "name": "cartalyst/testing",
    "description": "PHPUnit helpers and test cases for Platform.",
    "keywords": [
        "cartalyst",
        "platform",
        "laravel",
        "extension",
        "test",
        "testing",
        "helper",
        "case"
    ],
    "license": "proprietary",
    "authors": [
        {
            "name": "Cartalyst LLC",
            "email": "help@cartalyst.com",
            "homepage": "https://cartalyst.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.cartalyst.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "mockery/mockery": "^0.9",
        "phpunit/phpunit": "^5.7",
        "illuminate/container": "^5.0",
        "illuminate/support": "^5.0"
    },
    "require-dev": {
        "cartalyst/php-cs-fixer-config": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Cartalyst\\Testing\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "component": "package",
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
